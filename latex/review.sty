\RequirePackage{titlesec}

% Arguments of the \titleformat command in order of appearance:
% Command
% Shape
% Format
% Label
% Separation
% Before code
% After code

\titleformat
{\section}
[block]
{\sffamily\Large}
{\thesection .}
{1em}
{\textsc}
[]

\titleformat
{\subsection}
[block]
{\sffamily\large}
{\thesubsection .}
{1em}
{}
[]

