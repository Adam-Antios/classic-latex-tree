% Create the document's title.
\newcommand{\doctitle}[1]{%
    {\LARGE \textsf{#1}}\\[0.5cm]
    \textsf{\textit{Version \today}}\\[0.5cm]
}

\newcommand{\docauthors}[1]{%
    {\large\textsf{#1}}
    \vspace{1cm}
}

%
%

\RequirePackage[skins, breakable]{tcolorbox}
\newcommand{\response}[1]
{%
    \begin{tcolorbox}[
        breakable,
        blanker,
        width = 0.9\textwidth,
        parbox = false,
        enlarge left by=20pt
    ]
    \textbf{Response}:\ #1
    \end{tcolorbox}
}

