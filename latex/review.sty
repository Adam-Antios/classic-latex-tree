\RequirePackage{xcolor,soul}

%
%

% Numbering of comments, statements etc.
% Use the commands \stepfirst and \numitem.

\newcounter{FirstNum}
\newcounter{SecondNum}[FirstNum]

\setcounter{FirstNum}{1}
\setcounter{SecondNum}{0}

\newcommand{\stepfirst}{
    \stepcounter{FirstNum}
}

\newcommand{\numitem}{
    \stepcounter{SecondNum}
    \textbf{\theFirstNum.\theSecondNum.}\;
}

